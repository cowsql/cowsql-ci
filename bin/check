#!/bin/sh
set -eu

cd "$(dirname "${0}")"

. ../lib/config.sh
. ../lib/render.sh
. ../lib/install.sh
. ../lib/setup.sh
. ../lib/benchmark.sh

testbed=local

usage() {
	USAGE_STRING="\
usage: $0 [options]

Run cowsql checks

  -t, --testbed=TESTBED  specify the environment the checks are run on
  -h, --help             display this help message and exit"

	case "$1" in
		out)
			echo "$USAGE_STRING"
			exit 0
			;;
		err)
			echo "$USAGE_STRING" >&2
			exit 1
			;;
	esac
}

cleanup() {
    set +e

    rm -f "${config}"

    if [ "${FAIL}" = "1" ]; then
        echo ""
        echo "Checks failed"
        exit 1
    fi

    exit 0
}

run() {
    benchmark
}

if ! temp=$(getopt -o 't:h' --long 'testbed:,help' -n "$0" -- "$@"); then
	exit 1
fi

eval set -- "$temp"
unset temp

while true; do
    case "$1" in
    -t | --testbed)
        testbed="$2"
        shift 2
        ;;
    -h| --help)
        usage out
        ;;
    --)
        shift
        break
        ;;
    *)
        usage err
        ;;
    esac
done

FAIL=1
trap cleanup EXIT HUP INT TERM

if [ ! -e "../cfg/${testbed}.cfg" ]; then
    echo "no config for ${testbed} found in cfg directory"
    exit 1
fi

config="$(mktemp)"
render  "../cfg/${testbed}.cfg" > "${config}"

for item in $(get global install); do
    install_"${item}"
done

for device in $(get global device); do
    setup_device "${device}"
done

for version in $(get global version); do
    install_cowsql "${version}"
    run
done

FAIL=0
